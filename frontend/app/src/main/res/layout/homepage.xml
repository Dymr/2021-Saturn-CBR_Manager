<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/logo" />

            <Button
                android:id="@+id/newVisitButton"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="30dp"
                android:layout_marginRight="30dp"
                android:drawableTop="@drawable/ic_visit"
                android:gravity="bottom"
                android:scaleHeight="100dp"
                android:text="@string/new_visit"
                android:textAlignment="center"
                android:textColor="#000000"

                app:backgroundTint="#A1A1A1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/logo"
                tools:ignore="RtlCompat" />

            <Button
                android:id="@+id/newVisitButton2"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginStart="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="30dp"
                android:drawableTop="@drawable/ic_dashboard"
                android:gravity="bottom"
                android:scaleHeight="100dp"

                android:text="@string/dashboard"
                android:textAlignment="center"
                android:textColor="#000000"
                app:backgroundTint="#A1A1A1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/newVisitButton3"
                tools:ignore="RtlCompat" />

            <Button
                android:id="@+id/newVisitButton5"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginStart="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="30dp"
                android:drawableTop="@drawable/ic_client_list"
                android:gravity="bottom"

                android:scaleHeight="100dp"
                android:text="@string/all_clients"
                android:textAlignment="center"
                android:textColor="#000000"
                app:backgroundTint="#A1A1A1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/newVisitButton2"
                tools:ignore="RtlCompat" />

            <Button
                android:id="@+id/newVisitButton4"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="30dp"
                android:layout_marginRight="30dp"

                android:drawableTop="@drawable/ic_new_referral"
                android:gravity="bottom"
                android:scaleHeight="100dp"
                android:text="@string/new_referral"
                android:textAlignment="center"
                android:textColor="#000000"
                app:backgroundTint="#A1A1A1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/newVisitButton"
                tools:ignore="RtlCompat" />

            <Button
                android:id="@+id/newVisitButton6"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="30dp"

                android:layout_marginRight="30dp"
                android:drawableTop="@drawable/ic_sync"
                android:gravity="bottom"
                android:scaleHeight="100dp"
                android:text="@string/sync"
                android:textAlignment="center"
                android:textColor="#000000"
                app:backgroundTint="#A1A1A1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/newVisitButton4"
                tools:ignore="RtlCompat" />

            <Button
                android:id="@+id/newVisitButton3"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginStart="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="30dp"
                android:drawableTop="@drawable/ic_client_add"
                android:gravity="bottom"
                android:scaleHeight="100dp"
                android:text="@string/new_client"

                android:textAlignment="center"
                android:textColor="#000000"
                app:backgroundTint="#A1A1A1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/logo"
                tools:ignore="RtlCompat" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>