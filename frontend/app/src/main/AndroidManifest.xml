<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.cbr_manager">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Cbr_manager"
        android:windowSoftInputMode="adjustResize"
        tools:targetApi="n">
        <activity android:name=".ui.createreferral.CreateReferralActivity"></activity>
        <activity android:name=".ui.visitdetails.VisitDetailsActivity" />
        <activity
            android:name=".ui.createvisit.CreateVisitActivity"
            android:windowSoftInputMode="adjustResize" />
        <activity android:name=".ui.visits.VisitsActivity" />
        <activity
            android:name=".NavigationActivity"
            android:label="@string/title_activity_navigation"
            android:theme="@style/Theme.Cbr_manager.NoActionBar" />
        <activity
            android:name=".ui.clientdetails.ClientDetailsActivity"
            android:label=".ClientDetailsActivity"
            android:theme="@style/Theme.Cbr_manager.NoActionBar" />
        <activity
            android:name=".ui.alert.alert_details.AlertDetailsActivity"
            android:label=".AlertDetailsActivity"
            android:theme="@style/Theme.Cbr_manager.NoActionBar" />
        <activity android:name=".ui.homepage.HomepageActivity"
            android:label=".HomepageActivity"
            android:theme="@style/Theme.Cbr_manager.NoActionBar"/>
        <activity
            android:name=".ui.login.LoginActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.Cbr_manager.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.create_client.CreateClientActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" />
    </application>

</manifest>