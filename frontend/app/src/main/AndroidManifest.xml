<?xml version="1.0" encoding="utf-8"?>

<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.cbr_manager">

    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Cbr_manager">
        <activity
            android:name=".MainActivity"
            android:label="MainActivity"
            android:theme="@style/Theme.Cbr_manager.NoActionBar">
        <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".create_client.Consent"
            android:screenOrientation="portrait" />
        <activity
            android:name=".create_client.VillageInfo"
            android:screenOrientation="portrait" />
        <activity
            android:name=".create_client.PersonalInfo"
            android:screenOrientation="portrait" />
        <activity
            android:name=".create_client.Disability"
            android:screenOrientation="portrait" />
        <activity
            android:name=".create_client.CaregiverInfo"
            android:screenOrientation="portrait" />
        <activity
            android:name=".create_client.Photo"
            android:screenOrientation="portrait" />
    </application>
</manifest>
