<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.cbr_manager">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_SYNC_SETTINGS"/>
    <uses-permission android:name="android.permission.READ_SYNC_SETTINGS"/>
    <uses-permission android:name="android.permission.AUTHENTICATE_ACCOUNTS"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Cbr_manager"
        android:windowSoftInputMode="adjustResize"
        tools:targetApi="n">
        <activity android:name=".ui.clientselector.ClientSelectorActivity"></activity>
        <activity android:name=".ui.createreferral.CreateReferralActivity">
        </activity>
        <activity android:name=".ui.visitdetails.VisitDetailsActivity" />
        <activity
            android:name=".ui.createvisit.CreateVisitActivity"
            android:windowSoftInputMode="adjustResize" />
        <activity android:name=".ui.visits.VisitsActivity" />
        <activity
            android:name=".NavigationActivity"
            android:label="@string/title_activity_navigation"
            android:theme="@style/Theme.Cbr_manager.NoActionBar" />
        <activity
            android:name=".ui.clientdetails.ClientDetailsActivity"
            android:label=".ClientDetailsActivity"
            android:theme="@style/Theme.Cbr_manager.NoActionBar"
            android:windowSoftInputMode="adjustPan"/>
        <activity
            android:name=".ui.referral.referral_details.ReferralDetailsActivity"
            android:label=".ReferralDetailsActivity"
            android:theme="@style/Theme.Cbr_manager.NoActionBar" />
        <activity
            android:name=".ui.alert.alert_details.AlertDetailsActivity"
            android:label=".AlertDetailsActivity"
            android:theme="@style/Theme.Cbr_manager.NoActionBar" />
        <activity
            android:name=".ui.login.LoginActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.Cbr_manager.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.create_client.CreateClientActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" />

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.example.android.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>
        <provider
            android:authorities="com.example.cbr_manager"
            android:name=".data.storage.ClientProvider"
            android:exported="true"/>
        <service
            android:name="com.example.cbr_manager.data.storage.ClientSyncService"
            android:exported="true"
            android:process=":sync">
            <intent-filter>
                <action android:name="android.content.SyncAdapter" />
            </intent-filter>
            <meta-data
                android:name="android.content.SyncAdapter"
                android:resource="@xml/sync_adapter" />
        </service>

    </application>

</manifest>